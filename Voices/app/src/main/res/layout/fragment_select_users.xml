<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.voices.view.upload.SelectUsersFragment">

    <com.pchmn.materialchips.ChipsInput
        android:layout_width="match_parent"
        android:id="@+id/tags_users_input_select"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:chip_deletable="true"
        app:maxRows="3"
        app:chip_hasAvatarIcon="false"
        android:textSize="30sp"
        app:hint="Seleccion usuarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tags_users_input_select"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/recycler_view_select_users">
    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/select_users_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_light"
        android:hint="SELECCIONAR"
        android:textSize="20sp"
        android:shadowColor="#AB3A7A"
        android:textColorHint="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
