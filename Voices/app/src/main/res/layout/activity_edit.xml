<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentEdit"
    tools:context="com.example.voices.view.EditActivity"
    android:background="#ffffff">

    <rm.com.audiowave.AudioWaveView
        android:id="@+id/wave"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:animateExpansion="true"
        app:chunkHeight="74dp"
        app:chunkRadius="1dp"
        app:chunkSpacing="1dp"
        app:chunkWidth="3dp"
        app:minChunkHeight="2dp"
        app:waveColor="#AB3A7A" />



    <TextView
        android:id="@+id/durationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wave" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#AB3A7A"
        android:backgroundTint="#AB3A7A"
        android:clickable="true"
        android:scaleType="center"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:fabCustomSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wave"
        app:rippleColor="#AB3A7A"
        app:srcCompat="@drawable/ic_play_arrow_white_24dp" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
        android:layout_marginTop="8dp"
        android:id="@+id/liner1"
    app:layout_constraintTop_toBottomOf="@+id/floatingActionButtonPlay">
    <ImageButton
        android:src="@mipmap/applause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#ffffff"
        android:elevation="4dp"
        android:id="@+id/aplause">
    </ImageButton>

    <ImageButton
        android:src="@mipmap/duck"
        android:id="@+id/cuak"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#ffffff"
        android:elevation="4dp">
    </ImageButton>
    <ImageButton
        android:src="@mipmap/pistol"
        android:id="@+id/shot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#ffffff"
        android:elevation="4dp">

    </ImageButton>

    <ImageButton
        android:src="@mipmap/breaking"
        android:id="@+id/breaking"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#ffffff"
        android:elevation="4dp">
    </ImageButton>


</LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
        android:layout_marginTop="0dp"
        android:id="@+id/liner2"
    app:layout_constraintTop_toBottomOf="@+id/liner1">
    <ImageButton
        android:src="@mipmap/punch"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#ffffff"
        android:elevation="4dp"
        android:id="@+id/punch">
    </ImageButton>

    <ImageButton
        android:src="@mipmap/shout"
        android:id="@+id/manShouting"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#ffffff"
        android:elevation="4dp">
    </ImageButton>
    <ImageButton
        android:src="@mipmap/boy"
        android:id="@+id/kids"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#ffffff"
        android:elevation="4dp">

    </ImageButton>

    <ImageButton
        android:src="@mipmap/bounce"
        android:id="@+id/spring"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#ffffff"
        android:elevation="4dp">
    </ImageButton>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/liner2">
        <ImageButton
            android:id="@+id/drums"
            android:src="@mipmap/drums"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#ffffff"
            android:elevation="4dp">
        </ImageButton>
        <ImageButton
            android:id="@+id/sparta"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:src="@mipmap/sparta"
            android:backgroundTint="#ffffff"
            android:elevation="4dp">
        </ImageButton>

    </LinearLayout>

    <Button
        android:id="@+id/edit_next_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_light"
        android:hint="CONTINUAR"
        android:onClick="onNextClick"
        android:textSize="20sp"
        android:shadowColor="#AB3A7A"
        android:textColorHint="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
